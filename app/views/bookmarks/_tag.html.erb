<div class="tag_item">
  <span class="item_title">
    <% if public_only %>
      <%= link_to "#{tag.title} (#{(tag.bookmarks & @bookmarks).count})", tag_path(tag)%>
    <%else%>
      <%= link_to "#{tag.title} (#{(tag.bookmarks & @bookmarks).count})", user_tag_path(current_user,tag)%>
    <%end%>
  </span>
</div>