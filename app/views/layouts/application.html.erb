<!DOCTYPE html>
<html>
<head>
  <title>Bookmakr</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "page" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="page">
    <div id="top">
      <div id="main_menu">
        <%= if !signed_in? 
              render "default_menu" 
            else
              render "user_menu"
            end
        %>
      </div>
    </div>
    <div id="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
